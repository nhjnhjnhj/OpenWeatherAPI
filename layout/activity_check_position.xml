<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FAE0EEF4"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/textView"
		android:layout_width="314dp"
		android:layout_height="55dp"
		android:gravity="center_horizontal"
		android:text="@string/information"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="38sp"
		app:layout_constraintBottom_toTopOf="@+id/now"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.536"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.734" />

	<TextView
		android:id="@+id/now"
		android:layout_width="166dp"
		android:layout_height="54dp"
		android:layout_marginStart="52dp"
		android:layout_marginLeft="52dp"
		android:layout_marginBottom="16dp"
		android:gravity="center_horizontal"
		android:text="@string/time"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="24sp"
		app:layout_constraintBottom_toTopOf="@+id/weatherImage"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/Lupdate"
		android:layout_width="139dp"
		android:layout_height="54dp"
		android:layout_marginEnd="52dp"
		android:layout_marginRight="52dp"
		android:layout_marginBottom="20dp"
		android:text="@string/research"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/language"
		app:layout_constraintEnd_toEndOf="parent" />

	<ImageView
		android:id="@+id/weatherImage"
		android:layout_width="340px"
		android:layout_height="320px"
		android:layout_marginStart="64dp"
		android:layout_marginLeft="64dp"
		android:layout_marginBottom="8dp"
		app:layout_constraintBottom_toTopOf="@+id/weathername"
		app:layout_constraintStart_toStartOf="parent"
		tools:srcCompat="@tools:sample/avatars" />

	<Button
		android:id="@+id/language"
		android:layout_width="137dp"
		android:layout_height="117dp"
		android:layout_marginEnd="48dp"
		android:layout_marginRight="48dp"
		android:layout_marginBottom="8dp"
		android:text="@string/change_L"
		app:layout_constraintBottom_toTopOf="@+id/weathername"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/weathername"
		android:layout_width="299dp"
		android:layout_height="50dp"
		android:layout_marginBottom="8dp"
		android:background="#FFFFFF"
		android:textColor="@color/black"
		android:textSize="30sp"
		app:layout_constraintBottom_toTopOf="@+id/recommendplaceL"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/recommendplaceL"
		android:layout_width="295dp"
		android:layout_height="66dp"
		android:layout_marginBottom="20dp"
		android:text="@string/show_point"
		android:textSize="12sp"
		app:layout_constraintBottom_toTopOf="@+id/placename"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.517"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/placename"
		android:layout_width="202dp"
		android:layout_height="36dp"
		android:layout_marginBottom="36dp"
		android:background="#FFFFFF"
		android:text="@string/place_1"
		android:textColor="@color/black"
		android:textSize="25sp"
		app:layout_constraintBottom_toTopOf="@+id/textView3"
		app:layout_constraintEnd_toStartOf="@+id/rightside"
		app:layout_constraintStart_toEndOf="@+id/leftside" />

	<Button
		android:id="@+id/leftside"
		android:layout_width="54dp"
		android:layout_height="57dp"
		android:layout_marginStart="12dp"
		android:layout_marginLeft="12dp"
		android:layout_marginBottom="28dp"
		android:text="←"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/textView3"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/rightside"
		android:layout_width="55dp"
		android:layout_height="56dp"
		android:layout_marginEnd="12dp"
		android:layout_marginRight="12dp"
		android:layout_marginBottom="28dp"
		android:text="→"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/textView3"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="276dp"
		android:layout_height="43dp"
		android:layout_marginBottom="28dp"
		android:gravity="center_horizontal"
		android:text="@string/function"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="25sp"
		app:layout_constraintBottom_toTopOf="@+id/mailL"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.503"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/mailL"
		android:layout_width="163dp"
		android:layout_height="84dp"
		android:layout_marginStart="28dp"
		android:layout_marginLeft="28dp"
		android:layout_marginBottom="64dp"
		android:text="@string/mail"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/cameraL"
		app:layout_constraintHorizontal_bias="0.081"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/cameraL"
		android:layout_width="163dp"
		android:layout_height="84dp"
		android:layout_marginEnd="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="64dp"
		android:text="@string/camera"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>